@model DealDash.Web.Models.ActionViewModel
@{
    ViewBag.Title = "Home Page";
}
<!-- Page Content -->
<div class="container">

    <div class="row">
       
        <div class="col-lg-12">

            <div id="carouselExampleIndicators" class="carousel slide my-4" data-ride="carousel">
                <ol class="carousel-indicators">
                    <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
                    <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
                </ol>
                <div class="carousel-inner" role="listbox">
                    <div class="carousel-item active">
                        <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block img-fluid" src="http://placehold.it/900x350" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>

            <div class="row">

                @foreach (var promotedAuction in Model.PromotedAuctions)
                {
                    var picUrl = "/Content/Images/" + promotedAuction.AuctionPictures;

                    var picURL = promotedAuction.AuctionPictures != null && promotedAuction.AuctionPictures.Count > 0 ?
                                 "/Content/images/" + promotedAuction.AuctionPictures.First().Picture.URL : "http://placehold.it/700x400";

                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card h-100">
                            <a href="#"><img class="card-img-top" src="@picURL" alt=""></a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="@Url.Action("Details","Auction",new {ID =promotedAuction.ID })">@promotedAuction.Title</a>
                                </h4>
                                <h5>$@promotedAuction.ActualAmount</h5>
                                <p class="card-text">@promotedAuction.Description</p>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                            </div>
                        </div>
                    </div>

                }
                @foreach (var allAuction in Model.AllAuctions)
                {
                    var picUrl = "/Content/Images/" + allAuction.AuctionPictures;

                    var picURL = allAuction.AuctionPictures != null && allAuction.AuctionPictures.Count > 0 ?
                                 "/Content/images/" + allAuction.AuctionPictures.First().Picture.URL : "http://placehold.it/700x400";

                    <div class="col-lg-3 col-md-6 mb-4">
                        <div class="card h-100">
                            <a href="#"><img class="card-img-top" src="@picURL" alt=""></a>
                            <div class="card-body">
                                <h4 class="card-title">
                                    <a href="@Url.Action("Details","Auction",new {ID =allAuction.ID })">@allAuction.Title</a>
                                </h4>
                                <h5>$@allAuction.ActualAmount</h5>
                                <p class="card-text">@allAuction.Description!</p>
                            </div>
                            <div class="card-footer">
                                <small class="text-muted">&#9733; &#9733; &#9733; &#9733; &#9734;</small>
                            </div>
                        </div>
                    </div>

                 }
            </div>
            <!-- /.row -->

        </div>
        <!-- /.col-lg-9 -->

    </div>
    <!-- /.row -->

</div>
<!-- /.container -->
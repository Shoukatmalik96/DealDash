@model DealDash.Web.viewModels.PagerViewModel
@{
    ViewBag.Title = "Pager";
}

@if (Model.Pager != null && Model.Pager.TotalPages > 0)
{
    <nav aria-label="Page navigation example">
        <ul class="pagination justify-content-lg-center">
            @if (Model.Pager.CurrentPage == 1)
            {
                <li class="page-item disabled">
                    <a class="page-link" href="#">Previous</a>
                </li>
             }
             else
             {
                
                <li class="page-item">
                    <a class="page-link" href="@Url.Action(Model.action, Model.controller, new { pageNo = Model.Pager.CurrentPage - 1 })">Previous</a>
                    
                </li>
             }

            @for (int page = Model.Pager.CurrentPage; page < Model.Pager.EndPage + 1; page++)
            {
                var active = page == Model.Pager.CurrentPage ? "active" : string.Empty;
                <li class="page-item @active">
                    <a class="page-link" href="@Url.Action(Model.action, Model.controller, new { pageNo = page })">
                        @page
                    </a>
                </li>
            }
            @if (Model.Pager.CurrentPage == Model.Pager.EndPage)
            {
                <li class="page-item">
                    <a class="page-link" href="#">Next</a>
                </li>
            }
            else
            {
                <li class="page-item">
                    <a class="page-link" href="@Url.Action(Model.action,Model.controller, new { pageNo = Model.Pager.CurrentPage + 1 })">Next</a>
                </li>
            }

        </ul>
    </nav>
}
@model DealDash.Web.viewModels.AuctionsListingViewModel
<div class="row">
    <div class="col-lg-12 m-2">

        <div class="float-left">
            <h2>Auctions</h2>
        </div>
        <div class="float-right">
            <button class="btn btn-success" id="createButton" data-toggle="modal" data-target="#formModal">Create New Auction</button>
        </div>
        <br />
        <br />
        <div class="float-left">
            <form type="post">
                <div class="form-row align-items-center">
                    <div class="col-auto my-1">
                        <select class="custom-select mr-sm-2" id="inlineFormCustomSelect">
                            @foreach (var category in Model.Categories)
                             {
                                <option name="ID" value="@category.ID">@category.Name</option>
                             } 
                            
                        </select>
                    </div>
                    <div class="col-auto my-1">
                        <div class="custom-control custom-checkbox mr-sm-2">
                            <input class="form-control" placeholder="Search" name="Search" id="searchTxt">
                        </div>
                    </div>
                    <div class="col-auto my-1">
                        <button type="button" class="btn btn-primary" id="searchButton">Search</button>
                    </div>
                </div>
            </form>
        </div>
        <div id="listingArea">
            <div>
                @{ Html.RenderAction("Listing", new { categoryID = Model.categoryID, searhTerm = Model.searchTerm, pageNo = Model.pageNo });}
            </div>
        </div>
        <!-- Modal -->
        <div class="modal fade" id="formModal" tabindex="-1" role="dialog" aria-hidden="true">

            <div class="modal-dialog" role="document">
                <div class="modal-content" id="contentArea">

                </div>
            </div>
        </div>

        <!-- Delete Modal -->
        <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Are you sure you want to delete this record?</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                        <button type="button" class="btn btn-danger" id="mDeleteButton">Delete</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</div>

<div id="imageTemplate" style="display:none">
    <img class='image img-fluid' src='' />
</div>

<script>

    $("#searchButton").click(function () {
        debugger;
            var searchValue = $("#searchTxt").val();
		    $.ajax({
		    	url: "@Url.Action("Index", "Auction")",
                type: "POST",
                data: {
                    searchTerm: searchValue
                }
            }).done(function (response) {
                $("#listingArea").html(response)
		    });
	});

    $("#createButton").click(function () {
		$.ajax({
			url: "@Url.Action("Create", "Auction")",
			type: "get"
		}).done(function (response) {
			$('#formModal').modal('toggle');
			$("#contentArea").html(response);
		});
	});

	$("#mDeleteButton").click(function () {
		$.ajax({
			url: "@Url.Action("Delete", "Auction")",
			type: "post",
			data: {
				ID: $(this).attr("data-recordID")
			}
		})
		.done(function (response) {
			$("#listingArea").html(response);
			$('#deleteModal').modal('toggle');
		});
    });

	function RemoveImagesOnClick() {
		$("#picturesArea .image").click(function () {
			$(this).remove();
		});
    }

    function ReloadListing() {
		$.ajax({
			url: "@Url.Action("Listing", "Auctions")",
			type: "get"
		}).done(function (response) {
			$("#listingArea").html(response);
		});
	}
    

</script>


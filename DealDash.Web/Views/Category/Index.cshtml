@model DealDash.Web.viewModels.CategoriesListingViewModel
@{
    ViewBag.Title = "Index";
}

<div id="listingArea">
    <div class="container">

        <div class="float-left">
            <h2>Categories</h2>
        </div>
        <div class="float-right">

            <button class="btn btn-success" id="createButton" data-toggle="modal" data-target="#catFormModal">Create New Auction</button>
        </div>

        <div class="col-hd-12">

            <table class="table">
                <thead class="thead-dark">
                    <tr>
                        <th scope="col">Category Name</th>
                        <th scope="col">Category Description</th>
                        <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var category in Model.categories)
                    {
                        <tr>
                            <td scope="row">@category.Name</td>
                            <td scope="row">@category.Description</td>
                            <td scope="row">
                                <Button class="editButton btn btn-primary" data-id="@category.ID" data-toggle="modal" data-target="#catFromModal">Edit</Button>
                                <Button class="deleteButton btn btn-danger" data-id="@category.ID" data-toggle="modal" data-target="#deleteModal">Delete</Button>
                            </td>
                        </tr>
                    }

                </tbody>
            </table>
        </div>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="catFormModal" tabindex="-1" role="dialog" aria-hidden="true">

        <div class="modal-dialog" role="document">
            <div class="modal-content" id="contentArea">

            </div>
        </div>
    </div>
    <!---Delete Modal -->
    <div class="modal fade" id="deleteModal" tabindex="-1" role="dialog" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Are you sure you want to delete this record ?</h5>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="button" class="btn btn-danger" id="mDeleteButton">Delete</button>
                </div>
            </div>
        </div>
    </div>
    <script>

        $("#createButton").click(function () {

             $.ajax({
                 url: "@Url.Action("Create","Category")",
                 type: "get"
             }).done(function (data) {
                 $("#contentArea").html(data)
                 $('#formModal').modal('toggle');
             });
        });
        10
	$(".editButton").click(function () {
		$.ajax({
			url: "@Url.Action("Edit", "Category")",
			method: "get",
			data: {
				ID: $(this).attr("data-id")
			}
		}).done(function (response) {
			$("#contentArea").html(response);
			$('#catFormModal').modal('toggle');
		});
	});

	$(".deleteButton").click(function () {
		$('#deleteModal').modal('toggle');
		$('#mDeleteButton').attr("data-recordID", $(this).attr("data-id"));
	});
    </script>
</div>

